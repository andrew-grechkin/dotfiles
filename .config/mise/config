[tools.node]
postinstall = '''
    umask 022
    echo "> installing global NPM modules" >&2
    npm install -g pnpm yarn
    npm install -g @anthropic-ai/claude-code
'''
version = "24.11.1"

[tools.perl]
postinstall = '''
    umask 022
    cd $HOME/.local/lib
    echo "> installing perl modules from: $HOME/.local/lib/mise-perl-global.rc" >&2
    source mise-perl-global.rc
'''
version = "5.42.0.0"

[tools.ruby]
postinstall = '''
    umask 022
    echo "installing ruby gems" >&2
    gem update --system
    gem install rails
'''
version = "3.4.6"

