# vim: filetype=gitconfig

# man git-credential
# man gitcredentials

# Required dependencies:
# git-credential-oauth: go install github.com/hickford/git-credential-oauth@latest

[credential]
    helper      = cache --timeout 43200
    interactive = false

[credential "https://github.com"]
    helper = libsecret # standard git helper for linux: git-credential-libsecret, use osxkeychain on mac
    helper = oauth     # external helper: git-credential-oauth

[credential "https://gitlab.com"]
    helper = libsecret
    helper = oauth

[credential "token://gitlab.com"]
    helper = pass

[credential "https://app.harness.io"]
    helper = pass

[credential "https://app.terraform.io"]
    helper = pass

[credential "https://generativelanguage.googleapis.com"]
    helper = pass

# https://accounts.google.com/.well-known/openid-configuration
# https://developers.google.com/identity/protocols/oauth2#scenarios
# https://developers.google.com/identity/protocols/oauth2/scopes
# https://console.cloud.google.com/auth/clients
; [credential "https://sheets.googleapis.com"]
;     # Google doesn't follow oauth2 standard and best practices and requires client secret to be
;     # provided even if PKCE Authorization code flow is used.
;     # The only option is to follow their docs and don't treat client secret as a secret any more
;     # https://developers.google.com/identity/protocols/oauth2#installed
;     # because even if client secret is leaking - PKCE still makes the flow secure
;     # Obivously client secret should not be reused anywhere else in this case
;     helper            = libsecret
;     helper            = oauth
;     oauthAuthURL      = https://accounts.google.com/o/oauth2/v2/auth
;     oauthClientId     = <client_id>
;     oauthClientSecret = <client_secret>
;     oauthRedirectURL  = http://127.0.0.1:42185
;     oauthScopes       = https://www.googleapis.com/auth/spreadsheets
;     oauthTokenURL     = https://oauth2.googleapis.com/token
