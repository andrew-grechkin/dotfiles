# paste primary buffer
@p + alt + shift
	$HOME/.local/script/primarypaste | xdotool type --clearmodifiers --delay 5 --file -
# paste secondary buffer
@s + alt + shift
	$HOME/.local/script/secondarypaste | xdotool type --clearmodifiers --delay 5 --file -
