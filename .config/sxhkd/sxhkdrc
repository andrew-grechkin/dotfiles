# vim: filetype=sxhkdrc

# => control ------------------------------------------------------------------------------------------------------ {{{1

# focus to the given desktop
{1-9,0} + super
	bspc desktop -f '{1-9,0}'
# send to the given desktop
{1-9,0} + super + ctrl
	bspc node -d '{1-9,0}'
# preselect the ratio
{1-9} + super + shift
	bspc node -o 0.{1-9}

# focus the last node/desktop
{Tab,grave} + super
	bspc {node,desktop} -f last
Tab + alt + {_,shift}
	bspc wm -h off; \
	bspc node {prev,next} -f; \
	bspc wm -h on

# close/kill node
q + super + {_,ctrl}
	bspc node -{c,k}
# restart/quit bspwm
{w,W} + super + ctrl
	bspc {wm -r,quit}
# reload sxhkd config
r + super + ctrl
	pkill --signal USR1 -x sxhkd
# focus the older or newer node in the focus history
# super + {o,i}
p + super + ctrl
	bspc node -g private

s + super + ctrl
	bspc node -g sticky
f + super + ctrl
	bspwm-toggle-floating-state
f + super + ctrl + shift
	bspc node -t '~pseudo_tiled'
# focus the node in the given direction
{h,j,k,l} + super
	bspc node -f {west,south,north,east}
# preselect the direction
{h,j,k,l} + super + ctrl
	bspc node -p {west,south,north,east}
# move the node in the given direction
{h,j,k,l} + super + shift
	bspc node -s {west,south,north,east}
k + super + ctrl + shift
	xkill
l + super + ctrl + shift
	bspc node -g locked

# fullscreen node
z + super + ctrl
	bspc node -t "~fullscreen"
x + super + ctrl
	xprop > /tmp/xprop.log
# # swap the current node and the biggest window
# b + super + ctrl
# 	bspc node -s biggest.window
# Focus a floating/tiled window
n + super + ctrl
	bspwm-toggle-floating-focus

# resise window
{Left,Down,Up,Right} + super + ctrl
	bspc node -z {right -50 0,bottom 0 50,bottom 0 -50,right 50 0}

# move window
{Left,Down,Up,Right} + super + shift
	bspc node -v {-20 0,0 20,0 -20,20 0}

