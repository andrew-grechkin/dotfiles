#!/usr/bin/env bash

set -Eeuo pipefail

# ABSTRACT: wrapper around Amp to make requests easier from terminal and other programs by providing sane defaults

if [[ -t 0 && -z "$*" ]]; then
	echo "Pass a request to AI as a first option" >&2
	exit 1
fi

if [[ -t 0 ]]; then
	echo "$*" | amp
else
	cat | amp
fi
